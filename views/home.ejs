<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head'); %>
</head>

<body class="text-center">
  <%- include('./partials/nav'); %>
  <div class="container-fluid h-100">
    <div class="row h-100 justify-content-center align-items-center align-self-center">
      <!-- <div class="container mx-auto"> -->
        <% if (added) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          A Playlist have been created and Songs have been added.
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% } %>
        <div class="card shadow-sm p-auto m-auto w-75 h-100">
          <div class="card-header">
            <h4 class="my-0 font-weight-normal">Top 100 Billboard Songs</h4>
          </div>
          <div class="card-body">
            <a href="/add"><button type="button" class="btn btn-success">Add</button></a>
          </div>
        </div>
      <!-- </div> -->
    </div>
  </div>

  <footer class="footer">
    <%- include('./partials/footer'); %>
  </footer>
  <%- include('./partials/scripts'); %>
</body>

</html>
